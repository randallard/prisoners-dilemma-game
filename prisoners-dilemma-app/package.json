{
  "name": "prisoners-dilemma-app",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "check": "tsc --noEmit",
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
