    "@types/node": "^22.15.2",
    "@vitest/coverage-v8": "^3.1.2",
    "@web/test-runner": "^0.20.1",
    "@web/test-runner-commands": "^0.9.0",
    "happy-dom": "^17.4.4",
    "tailwindcss": "^4.1.4",
    "typescript": "~5.7.2",
    "vite": "^6.3.1",
    "vitest": "^3.1.2"
  }
}
